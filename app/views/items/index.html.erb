
<div class="container">
  <p class=""><h2 class="">Items
 <% if can? :create, @item %>
      <%= link_to 'Add New Offered item', new_item_path, class: "btn btn-default", style: "float:right;" %>
    <%end %>
    </h2>
</p>


  <table class="table table-striped">
   
      <thead>
        <tr>
          <th>Sku</th>
          <th>Name</th>
          <th>Price</th>
          <th>Cost price</th>
          <th>Level</th>
          <th>Item type</th>
          <th>Category</th>
          <th>Stock amount</th>
          <th>Amount sold</th>
          <th>Description</th>
          <th colspan="3"></th>
        </tr>
      </thead>


          <tbody>
              <% @items.each do |item| %>
                <tr>
                  <td><%= item.sku %></td>
                  <td><%= item.name %></td>
                  <td><%= item.price %></td>
                  <td><%= item.cost_price %></td>
                  <td><%= item.level.name %></td>
                  <td><%= item.item_type.name %></td>
                  <td><%= item.category.name %></td>
                  <td><%= item.stock_amount %></td>
                  <td><%= item.amount_sold %></td>
                  <td><%= item.description %></td>
                  <td><%= link_to 'Show', item %></td>
                  <td><%= link_to 'Edit', edit_item_path(item) %></td>
                  <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
       
    
  </table>

  <br>
      

  <%= link_to 'Back', :back , class: "btn btn-default" %>
</div>
   